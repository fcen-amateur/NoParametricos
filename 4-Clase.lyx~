\begin_layout Subsubsection
Primera Hipótesis de la Condición Suficiente
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Phi_{n}\left(\boldsymbol{X}\right)=\begin{cases}
1 & S_{n}\geq k\\
0 & S_{n}<k
\end{cases}=\begin{cases}
1 & \frac{S_{n}}{n}\ge\frac{k}{n}\\
0 & \text{cc}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
T_{n}=\frac{S_{n}}{n}\overset{LGN}{\rightarrow}_{n\rightarrow\infty}\mathbb{E}\left(\Delta\left(X_{i}\right)\right)=P\left(X_{i}\geq0\right)=1-F\left(-\theta\right)\begin{cases}
\frac{1}{2} & H_{0}\\
>\frac{1}{2} & H_{1}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
TCL bajo 
\begin_inset Formula $H_{0}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sqrt{n}\frac{\frac{S_{n}}{n}-\frac{1}{2}}{\sqrt{\frac{1}{2}\frac{1}{2}}}\overset{\mathcal{D}}{\rightarrow}\mathcal{N}\left(0;1\right)
\]

\end_inset


\end_layout

