\begin_layout Example
\begin_inset Formula 
\[
P\left(X_{i}=0;Y_{i}=1\right)=P\left(X_{i}=1;Y_{i}=0\right)\Leftrightarrow P\left(X_{i}=1\right)=P\left(Y_{i}=1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(X_{i}=1\right)=P\left(X_{i}=1;Y_{i}=0\right)+P\left(X_{i}=1;Y_{i}=1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Con la primera hipótesis:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(X_{i}=1\right)=\underbrace{P\left(X_{i}=1;Y_{i}=0\right)}_{P\left(X_{i}=0;Y_{i}=1\right)}+P\left(X_{i}=1;Y_{i}=1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
P\left(X_{i}=1\right)=P\left(X_{i}=0;Y_{i}=1\right)+P\left(X_{i}=1;Y_{i}=1\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
